  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "outDir": "dist-typeorm",
    "baseUrl": "."
  },
  "include": [
    "ormconfig.ts",
    "src/entities/**/*.ts"
  ]
}
